{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "alwaysStrict": true,
    // "strictNullChecks": true,
    // "strictBindCallApply": true,
    "strictFunctionTypes": true,
    // "strictPropertyInitialization": true,
    // "noImplicitAny": true,
    // "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "stripInternal": true,
    "target": "ES6"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
